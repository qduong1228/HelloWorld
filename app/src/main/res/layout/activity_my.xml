<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quinntinfirstproject.myapplication.MyActivity"
    android:background="#ffffff">

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#052813"
        android:textSize="60dp"
        android:background="#ffffff"
        android:fontFamily="sans-serif-thin"/>

    <TextView
        android:id="@+id/heading"
        android:text="Quinntin Duong. \n Mobile Development Architecture. \n Computer Science."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@string/hello_world"
        android:textColor="#0c0743"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView" />

    <ImageView
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="68dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/hello_world"
        android:id="@+id/imageView" />


</android.support.constraint.ConstraintLayout>
